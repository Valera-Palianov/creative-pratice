nav.secondary-navigation
	+button({className: 'secondary-navigation__item', title: 'Весь рынок', theme: 'alt'})
	+button({className: 'secondary-navigation__item', title: 'Мужская обувь'})
	+button({className: 'secondary-navigation__item', title: 'Женская обувь', theme: 'alt'})
	+button({className: 'secondary-navigation__item', title: 'Детская обувь', theme: 'alt'})
+flex-grid({columns: 2, gap: 24})
	.flex-grid__item
		h2.h1-text-size.m-b-24 Содержание рынка
		+flex-grid({columns: 2, gap: 24})
			.flex__item
				+flex-grid()
					+link-case({
						title: 'Обзор рынка',
						links: ['Текущее состояние', 'Производство', 'Импорт', 'Экспорт', 'Динамика рынка', 'Структура рынка', 'Каналы продаж', 'Госрегулирование', 'Мнения игроков рынка', 'Сетевой сегмент рынка обуви']
					})
					+link-case({
						title: 'Прогнозы',
						links: ['Общий прогноз рынка обуви', 'Женская обувь', 'Мужская обувь', 'Детская обувь']
					})
					+link-case({
						title: 'Потребители',
						links: ['Отечественная обувь', 'Социальные сети как канал продвижения', 'Изменения цен', 'Изменения ассортимента', 'Изменения качества', 'Отношение к акциям', 'Качество обуви', 'Госрегулирование', 'Факторы выбора обуви', 'Другие результаты опросов']
					})
					+link-case({
						title: 'Дополнительно',
						links: ['Методы сбора информации', 'Архив исследований РБКи 2013-2017']
					})
			.flex__item
				+flex-grid()
					+link-case({
						title: 'Тренды',
						links: ['Made in Russia', 'Омниканальность', 'Smart-Shopping', 'Программы лояльности', 'Дополнительные услуги', 'Технологические тренды рынка', 'Борьба с контрафактом']
					})
					+link-case({
						title: 'Игроки',
						links: ['Планы развития ведущих игроков', 'Учредители и регистрационные данные', 'Ключевые финансовые показатели', 'Руководство', 'Контактная информация']
					})
					+link-case({
						title: 'События рынка',
						links: ['Еженедельные дайджесты', 'Календарь мероприятий']
					})
					+link-case({
						title: 'Рейтинги',
						links: ['Топ-100 сетей по торговой площади', 'Топ-100 сетей по доле магазинов в торговых центрах', 'Ведущие игроки по количеству точек', 'Ведущие игроки по обороту', 'Ведущие игроки по рыночной доле', 'Другие рейтинги']
					})
	.flex-grid__item
		h2.h1-text-size.m-b-24 Развитие бизнеса
		+flex-grid()
			+business-block({
				icon: 'clothes',
				title: 'Рынок одёжного ритейла 2019',
				description: 'Команда РБК Исследования рынков подготовила комплексный анализ российского рынка одежды 2019. Серия исследований включает аналитику по развитию сетей (площадь, выручка, количество магазинов, география работы сетей), результаты потребительских опросов, тренды и ключевые события рынка.'
			})
			+business-block({
				icon: 'calendar',
				title: 'Название мероприятия',
				description: 'Аннотация мероприятия',
				lightTheme: true
			})
			+business-block({
				icon: 'lux',
				title: 'Рынок товаров класса люкс 2019',
				description: 'Готовый анализ рынка аксессуаров класса «люкс» в России. Исследование содержит сведения об объеме рынка, темпах роста, тенденциях и перспективах развития и других ключевых показателях.'
			})
			+business-block({
				icon: 'commercial-building',
				title: 'Рынок коммерческой недвижимости 2019',
				description: 'Международная консалтинговая компания Knight Frank подготовила обзор рынка коммерческой недвижимости по итогам полугодия 2019 года и представила краткий прогноз тенденций рынка в различных сегментах коммерческой недвижимости.'
			})