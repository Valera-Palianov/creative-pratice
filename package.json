{
  "name": "creative-practice",
  "version": "1.0.0",
  "description": "Final assignment for the HTML, Ð¡SS and packers training unit",
  "repository": "https://github.com/Valera-Palianov/creative-pratice",
  "author": "Valera Palianov <valera.palianov@gmail.com>",
  "license": "WTFPL",
  "private": true,
  "scripts": {
    "dev": "better-npm-run start-dev",
    "prod": "better-npm-run build-prod",
    "build": "better-npm-run build-dev"
  },
  "betterScripts": {
    "build-prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production",
        "NODE_RESULT": "build"
      }
    },
    "build-dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development",
        "NODE_RESULT": "build"
      }
    },
    "start-dev": {
      "command": "webpack-dev-server --open",
      "env": {
        "NODE_ENV": "development",
        "NODE_RESULT": "server",
        "PORT": 3000
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "better-npm-run": "^0.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.1.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {}
}
